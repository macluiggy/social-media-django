{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": {
      "type": "swc",
      "options": {
        "swcrcPath": "infrastructure/.swcrc"
      }
    },
    "assets": ["**/*.{yml,yaml,json,xml,ico,png,jpg,html,txt,ejs,handlebars}"],
    "watchAssets": true,
    "typeCheck": true
  }
}
